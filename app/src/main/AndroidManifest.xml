<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcjang.mynespresso">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/small_arpeggio"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data android:name="screenOrientation" android:value="portrait" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.capsule.CapsuleDetailActivity" android:windowSoftInputMode="adjustResize" android:screenOrientation="portrait">
            <meta-data android:name="screenOrientation" android:value="portrait" />
            <meta-data android:name="windowSoftInputMode" android:value="adjustResize" />
        </activity>
    </application>

</manifest>