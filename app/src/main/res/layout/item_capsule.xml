<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#FFFFFF" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCapsuleImage"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/small_arpeggio"
                android:layout_width="60dp"
                android:layout_height="60dp" />

        </LinearLayout>

        <LinearLayout
            android:background="#55000000"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCapsuleName"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:text="Arpegio"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvCapsuleNameEng"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:text="Arpegio"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/llCupSizeLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivCapsuleCupSize0"
                    android:src="@drawable/cup_size_40"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvCapsuleCupSize0"
                    android:text="40ml"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivCapsuleCupSize1"
                    android:src="@drawable/cup_size_40"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvCapsuleCupSize1"
                    android:text="40ml"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivCapsuleCupSize2"
                    android:src="@drawable/cup_size_40"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvCapsuleCupSize2"
                    android:text="40ml"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivCapsuleCupSize3"
                    android:src="@drawable/cup_size_40"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tvCapsuleCupSize3"
                    android:text="40ml"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvIntensity"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>